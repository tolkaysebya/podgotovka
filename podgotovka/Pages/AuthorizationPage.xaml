<Page x:Class="podgotovka.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:podgotovka.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center" 
                    Width="300">
            <TextBlock Text="Login"/>
            <TextBox x:Name="TBLogin"/>
            <TextBlock Text="Password"/>
            <PasswordBox x:Name="TBPassword"/>
            <Button x:Name="BSave" Content="Save" Click="BSave_Click"/>
            <Button x:Name="BRegistration" Content="Registration" Click="BRegistration_Click" />
            </StackPanel>
    </Grid>
</Page>
